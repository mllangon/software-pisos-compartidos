// datasource and generator
datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  memberships GroupMember[]
  invitations Invitation[] @relation("UserInvitations")
  ownedGroups Group[]
  createdEvents Event[] @relation("CreatedEvents")
  assignedEvents Event[] @relation("AssignedEvents")
  paidExpenses Expense[] @relation("PaidExpenses")
}

model Group {
  id        String        @id @default(cuid())
  name      String
  ownerId   String
  owner     User          @relation(fields: [ownerId], references: [id])
  members   GroupMember[]
  invitations Invitation[]
  events     Event[]
  expenses   Expense[]
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}

model GroupMember {
  id        String   @id @default(cuid())
  groupId   String
  userId    String
  role      String   @default("member")
  group     Group    @relation(fields: [groupId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())

  @@unique([groupId, userId])
}

model Invitation {
  id         String            @id @default(cuid())
  groupId    String
  inviterId  String
  inviteeEmail String
  status     String            @default("PENDING")
  createdAt  DateTime          @default(now())
  updatedAt  DateTime          @updatedAt

  group      Group             @relation(fields: [groupId], references: [id])
  inviter    User              @relation("UserInvitations", fields: [inviterId], references: [id])

  @@index([inviteeEmail])
}

model Event {
  id          String   @id @default(cuid())
  groupId     String
  creatorId   String
  title       String
  description String?
  type        String   @default("TASK") // TASK, EVENT, REMINDER
  date        DateTime
  completed   Boolean  @default(false)
  assignedTo String?   // userId opcional
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  group       Group    @relation(fields: [groupId], references: [id])
  creator     User     @relation("CreatedEvents", fields: [creatorId], references: [id])
  assignee    User?    @relation("AssignedEvents", fields: [assignedTo], references: [id])

  @@index([groupId, date])
  @@index([assignedTo])
}

model Expense {
  id          String   @id @default(cuid())
  groupId     String
  payerId     String
  amount      Float
  description String
  category    String?   // Comida, Limpieza, Internet, etc.
  date        DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  group       Group    @relation(fields: [groupId], references: [id])
  payer       User     @relation("PaidExpenses", fields: [payerId], references: [id])

  @@index([groupId, date])
  @@index([payerId])
}


